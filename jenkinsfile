pipeline {
   agent any
   stages{
      stage('clone Git Repository')  {
         steps  {
               git branch: 'main', url: 'https://github.com/beastguhan/Jenkins-ansible.git'
          }
     }
      stage('Run Ansible playbook') {
    steps {
        ansiblePlaybook(
            playbook: 'playbook.yml',
            inventory: 'inventory.ini',
            credentialsId: 'ansible-ssh',   // use your Jenkins credential ID here
            hostKeyChecking: false
        )
    }
}

      }
   }

